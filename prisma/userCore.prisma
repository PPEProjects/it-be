generator client {
  provider = "prisma-client-js"
  output   = "./generator/clientUserCore"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_USER")
}

model User {
  id                       Int      @id @default(autoincrement())
  firstName                String?  @map("first_name")
  name                     String?
  platform                 String?
  email                    String   @unique
  password                 String   @unique
  phoneNumber              String?
  username                 String?
  role_label               String?
  quotes                   String?
  is_flag                  Boolean  @default(false)
  avatar_attachment_id     Int?
  background_attachment_id Int?
  roles                    Json 
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @updatedAt @map("updated_at")

  @@map("user")
}
